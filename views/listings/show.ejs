 <% layout("/layouts/boilerplate.ejs")  %>

 <div class="row mt-3">
    <div class="col-8 offset-2">
        <h3><b><%=listing.title%></b></h3>
    </div>
    
    <div class="card col-8 offset-2 mb-3">
       <img src="<%=listing.image%>" class="card-img-top show-img" alt="Listing-Image">
       <div class="card-body">
        <%= listing.description %> <br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %>  <br>
        <%= listing.location %> <br>
        <%= listing.country %>

        <br><br>
          <div class="show-btns">
            <a href="/listings/<%= listing._id %>/edit" class="show-edit-btn mt-3">Edit</a>
            <br>
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" >
              <button class="show-dlt-btn mt-2">Delete</button>
            </form>
          </div>

       </div>
    </div>
    <hr>
    <div class="col-8 offset-2 mb-3">
       <h4>Leave a Review</h4>
       <form action="" class="mb-3">
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" class="form-control" name="review[rating]">
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="commect" class="form-control"></textarea>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
       </form>
    </div>

</div>
