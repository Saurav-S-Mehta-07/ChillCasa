 <% layout("/layouts/boilerplate.ejs")  %>
 <div class="row">
   <div class="col-8 offset-2">
      <h3 class="mt-3">Edit your Listing</h3>
      <form method="POST" 
            action="/listings/<%= listing._id %>?_method=PUT"
            novalidate
            class="needs-validation"
      >
         <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" 
                   value="<%= listing.title %>" 
                   type="text" class="form-control" 
                   id="title" 
                   required
            />
            <div class="invalid-feedback">
               please enter title
             </div>
         </div>
         
         <div  class="mb-2">
           <label for="description">Description</label>
           <textarea name="listing[description]"  
                     class="form-control" 
                     id="description" required><%= listing.description %></textarea>
            <div class="invalid-feedback">
               please enter description
           </div>
         </div>
  
         <div  class="mb-2">
           <label for="image">Image</label>
           <input name="listing[image]" 
                  value="<%= listing.image %>" 
                  type="text"  class="form-control"
                   id="image"
                   required
            />
            <div class="invalid-feedback">
               please upload image
            </div>
         </div>
        
         <div  class="mb-2">
            <label for="price">Price</label>
            <input name="listing[price]" 
                   value="<%= listing.price %>" 
                   type="number" class="form-control" 
                   id="price"
                   required
            />
            <div class="invalid-feedback">
               please enter valid price
            </div>
         </div>

         <div class="row">
            <div class="col-md-4 mb-2">
               <label for="location">Location</label>
               <input
                 name="listing[location]"
                 value="<%= listing.location %>"
                 type="text"
                  class="form-control"
                  id="location"
                  required
               />

               <div class="invalid-feedback">
                  please enter location
               </div>
            </div>

            <div class="col-md-8 mb-2">
               <label for="country">Country</label>
               <input
                  name="listing[country]"
                  value="<%= listing.country %>"
                  type="text"
                  id="country"
                  class="form-control"
                  required
               />
               <div class="invalid-feedback">
                  please enter country name
               </div>
            </div>
         </div>
  
         
        <button  class="mb-2 edit-btn">Edit</button>
      </form>
  </div>
</div>