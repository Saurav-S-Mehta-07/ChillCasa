 <% layout("/layouts/boilerplate.ejs")  %>

<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-3">Create a New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation">

      <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" 
               placeholder="add a catchy title" type="text" 
               id="title" class="form-control" required
         />
          <div class="valid-feedback">
              Looks good!
          </div>
          <div class="invalid-feedback">
               please enter title
          </div>
      </div>
      
      <div  class="mb-2">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" 
                  placeholder="enter description" id="description" 
                  class="form-control" required></textarea>
          <div class="valid-feedback">
              Looks good!
          </div>
          <div class="invalid-feedback">
               please enter description
          </div>
      </div>


      <div  class="mb-2">
        <label for="image" class="form-label">Image</label>
        <input
           name="listing[image]"
           placeholder="enter image URL/Link"
           type="text"
           id="image" class="form-control"
        />
      </div>


      <div  class="mb-2">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" 
               placeholder="1200" type="number" 
               id="price" class="form-control" 
               required
        />
          <div class="valid-feedback">
              Looks good!
          </div>
          <div class="invalid-feedback">
               please enter valid price
          </div>
      </div>

      <div class="row">
          <div  class="mb-2 col-md-4">
            <label for="location" class="form-label">Location</label>
            <input
              name="listing[location]"
              placeholder="Jaipur"
              type="text"
              id="location" class="form-control"
              required
            />
            <div class="invalid-feedback">
               please enter location
            </div>
          </div>
    
    
          <div  class="mb-2 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]"
                   placeholder="India" type="text" 
                   id="country" class="form-control"
                   required
              />
             <div class="invalid-feedback">
                  please enter country name
             </div>
          </div>
      </div>

      <button class="mb-2 add-btn">Add</button>

    </form>
  </div>
</div>  
